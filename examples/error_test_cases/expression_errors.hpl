# 表达式语法错误测试文件
# 用于测试表达式、运算符、函数调用等错误的定位精准度

main: () => {
    # ========== 错误 1: 未闭合的括号（第 7 行） ==========
    result = (10 + 20  # 缺少右括号

    # ========== 错误 2: 运算符连续使用（第 10 行） ==========
    x = 10 ++ 20  # 无效的运算符组合

    # ========== 错误 3: 缺少操作数（第 13 行） ==========
    y = 10 +  # 缺少右操作数

    # ========== 错误 4: 无效的赋值（第 16 行） ==========
    10 = x  # 不能给字面量赋值

    # ========== 错误 5: 函数调用缺少右括号（第 19 行） ==========
    echo("hello"  # 缺少右括号

    # ========== 错误 6: 函数调用参数错误（第 22 行） ==========
    echo("arg1" "arg2")  # 缺少逗号分隔参数

    # ========== 错误 7: 数组语法错误（第 25 行） ==========
    arr = [1, 2, 3,]  # 尾随逗号（某些解析器可能不接受）

    # ========== 错误 8: 数组索引错误（第 28 行） ==========
    val = arr[  # 缺少索引表达式

    # ========== 错误 9: 字典语法错误（第 31 行） ==========
    dict = {key: "value"}  # 键应该用引号包围

    # ========== 错误 10: 字典键值对错误（第 34 行） ==========
    bad_dict = {"a" "b"}  # 缺少冒号

    # ========== 错误 11: 字符串拼接错误（第 37 行） ==========
    msg = "hello" +  # 缺少右操作数

    # ========== 错误 12: 无效的运算符组合（第 40 行） ==========
    z = 10 */ 5  # 无效的运算符组合

    # ========== 错误 13: 一元运算符错误（第 43 行） ==========
    w = ++ 10  # 前缀自增不支持

    # ========== 错误 14: 比较运算符链式使用（第 46 行） ==========
    valid = 1 < 2 < 3  # 链式比较可能不被支持

    # ========== 错误 15: 三元运算符（第 49 行） ==========
    ternary = true ? "yes" : "no"  # HPL 不支持三元运算符

    # ========== 错误 16: 无效的变量名（第 52 行） ==========
    $invalid = 10  # $ 不是有效的标识符字符

    # ========== 错误 17: 点号运算符错误（第 55 行） ==========
    obj..method()  # 双点号错误

    # ========== 错误 18: 方法调用缺少对象（第 58 行） ==========
    .method()  # 缺少对象

    # ========== 错误 19: 嵌套表达式括号不匹配（第 61 行） ==========
    complex = ((10 + 20) * (30 - 5  # 缺少右括号

    # ========== 错误 20: 逗号表达式（第 64 行） ==========
    multi = 10, 20, 30  # 逗号表达式可能不被支持

    echo "Expression error test"
  }

call: main()
